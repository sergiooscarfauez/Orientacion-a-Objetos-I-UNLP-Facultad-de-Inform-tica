Object subclass: #Farola	instanceVariableNames: 'isOn neighbors'	classVariableNames: ''	poolDictionaries: ''	category: 'Objetos1-Farolas'!!Farola methodsFor: 'initialization' stamp: 'Sergio 9/20/2018 11:39'!initialize   isOn := false.   neighbors := Set new. ! !!Farola methodsFor: 'accesing' stamp: 'Sergio 9/20/2018 11:39'!neighbors		^ neighbors! !!Farola methodsFor: 'accesing' stamp: 'Sergio 9/20/2018 11:39'!turnOn		self isOn		ifFalse: [ isOn := true.			self neighbors do: [ :each | each turnOn] ]! !!Farola methodsFor: 'accesing' stamp: 'Sergio 9/20/2018 11:39'!pairWithNeighbor: aFarola		(neighbors includes: aFarola)				ifFalse: [ neighbors add: aFarola.			aFarola pairWithNeighbor: self ]! !!Farola methodsFor: 'accesing' stamp: 'Sergio 9/20/2018 11:39'!turnOff		self isOn		ifTrue: [ isOn := false.			self neighbors do: [ :each | each turnOff ] ]! !!Farola methodsFor: 'accesing' stamp: 'Sergio 9/20/2018 11:39'!isOn		^ isOn! !